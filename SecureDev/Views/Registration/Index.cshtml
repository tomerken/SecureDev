@model Vladi2.Models.User

@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>

@using (Html.BeginForm("Index", "Registration", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-group">
            @Html.Label("Username", new { @class = "col-md-3 control-label" })
            @Html.TextBoxFor(a => a.Username, new { @class = "col-md-6 form-control" })
            @Html.ValidationMessageFor(a => a.Username)
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.Label("Password", new { @class = "col-md-3 control-label" })
            @Html.PasswordFor(a => a.Password, new { @class = "col-md-6 form-control" })
            @Html.ValidationMessageFor(a => a.Password)
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.Label("Confirmation Password", new { @class = "col-md-3 control-label" })
            @Html.PasswordFor(a => a.ComparePassword, new { @class = "col-md-6 form-control" })
            @Html.ValidationMessageFor(a => a.ComparePassword)
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.Label("Email", new { @class = "col-md-3 control-label" })
            @Html.TextBoxFor(a => a.Email, new { @class = "col-md-6 form-control" })
            @Html.ValidationMessageFor(a => a.Email)
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.Label("First Name", new { @class = "col-md-3 control-label" })
            @Html.TextBoxFor(a => a.FirstName, new { @class = "col-md-6 form-control" })
            @Html.ValidationMessageFor(a => a.FirstName)
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.Label("Last Name", new { @class = "col-md-3 control-label" })
            @Html.TextBoxFor(a => a.LastName, new { @class = "col-md-6 form-control" })
            @Html.ValidationMessageFor(a => a.LastName)
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.Label("Phone", new { @class = "col-md-3 control-label" })
            @Html.TextBoxFor(a => a.Phone, new { @class = "col-md-6 form-control" })
            @Html.ValidationMessageFor(a => a.Phone)
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.Label("Picture", new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                <input type="file" name="Picture" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif,.bmp" />
                <div>@ViewBag.PictureMessage</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8"></div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


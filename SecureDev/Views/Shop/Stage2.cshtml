                @Html.EditorFor(model => model.BehindDigits, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BehindDigits, "", new { @class = "text-danger" })
            </div>
        </div>

    <div>
        @Html.ActionLink("Next", "Stage3")

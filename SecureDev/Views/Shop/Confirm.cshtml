@model IEnumerable<Vladi2.Models.CartItem>

@{
    ViewBag.Title = "Confirmation Page";
}

<h2>Confirm</h2>

@using (Html.BeginForm("Buy", "Shop", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    if (Model == null)
    {
        @ViewBag.Message
    }
    else
    { 
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.petName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.petType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.petName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.petType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }

        </table>        
        <div class="col-md-offset-11 col-md-1">
            <button type="submit" class="btn btn-primary">Buy</button>
        </div>
        
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
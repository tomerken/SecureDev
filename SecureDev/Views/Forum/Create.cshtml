@model Vladi2.Models.ForumMessage

@{
    ViewBag.Title = "Create a new forum message";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Forum", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create a new forum message</h4>
        <hr />

        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Subject, new { @class = "col-md-1 control-label" })
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Subject, new { @class = "col-md-9 form-control" })
                @Html.ValidationMessageFor(model => model.Subject)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Body, new { @class = "col-md-1 control-label" })
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Body, new { @class = "col-md-9 form-control" })
                @Html.ValidationMessageFor(model => model.Body)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}